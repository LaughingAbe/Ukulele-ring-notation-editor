//I'm trying to create a button that will play a sound file when I click on it
//It would be great to use this interactive feature for songs displayed on a screen

package com.example.soundbutton

import android.media.MediaPlayer
import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle


class MainActivity : AppCompatActivity()
    var b: Button? = null
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)
    }

    override fun onResume() {
        super.onResume()
        val mp :MediaPlayer! = MediaPlayer.create( context: this, R.raw.Lightsweep)
        b = findViewById<View>(R.id.ButMove) as Button
        b!!.setOnClickListener { it: View!
                mp.start()
                startActivity(Intent(packageContext: this@MainActivity, MainActivity2::class.java))

    }
}

    companion object {
        var mp: MediaPlayer? = null
    }
